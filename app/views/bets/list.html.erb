                <div class="row">
                    <div class="col-xl-2">
                        <h2>All bets<small> from oldest to newest </small></h2>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                      <th>Match</th>
                                      <th>Course</th>
                                      <th>Bet</th>
                                      <th>Result</th>
                                      <th>Gain</th>
                                      <th>Delete</th>
                                      <th>Change Result</th>
                                    </tr>
                                </thead>
                                <tbody>
                                  <%  unless @bets.empty? %>  
                                    <%@bets.order('bets.created_at ASC').each do |bet| %>
                                    <%if bet.result== 1 %>
                                        <tr class="success">
                                         <td><%= bet.match %></td>
                                            <td><%= bet.course %></td>
                                            <td><%= bet.bet%>€</td>
                                            <td>Won</td>
                                             <td><%=bet.gain%>€</td>
                                            <td><%= button_to 'Destroy', bet,:class => "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                            <td><%= button_to "Won/Lost", truefalse_bet_path(bet),:class => "btn btn-sm btn-primary", method: :put %></td>
                                             </tr>
                                    <%elsif bet.result==0%>
                                        <tr class="danger">
                                         <td><%= bet.match  %></td>
                                            <td><%= bet.course %></td>
                                            <td><%= bet.bet%>€</td>
                                            <td>Lost</td>
                                           <td> <%= bet.gain%>€</td>
                                            <td><%= button_to 'Destroy', bet,:class => "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                            <td><%= button_to "Won/Lost", truefalse_bet_path(bet),:class => "btn btn-sm btn-primary", method: :put %></td>
                                             </tr>
                                    <%else%>
                                       <tr class="warning">
                                         <td><%= bet.match  %></td>
                                            <td><%= bet.course %></td>
                                            <td><%= bet.bet%>€</td>
                                            <td><%= bet.result %></td>
                                           <td>waiting for result</td>
                                            <td><%= button_to 'Destroy', bet,:class => "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                            <td><%= button_to "Won/Lost", truefalse_bet_path(bet),:class => "btn btn-sm btn-primary", method: :put %></td>
                                             </tr>
                                             <%end%>
                                    <%end%>
                                    <tr height= 5px>
                                    </tr>
                                        <tr class="warning">
                                            <td>Summary</td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                             <% i=0 %>
                                            <td><% @bets.each do |bet| %>
                                             <% unless bet.course.nil? || bet.bet.nil? %>
                                                <% i= i+bet.gain%>
                                              <%end%>
                                            <%end%>
                                            <%=i.round(3)%>€
                                            </td>
                                            <td></td>
                                            <td></td>

                                        </tr>
                                  <%end%>
                                </tbody>
                            </table>

