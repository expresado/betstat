
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Bet Stats</title>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/sb-admin.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="css/plugins/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="font-awesome-4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="bets">Bet Stats</a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
              
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bell"> <%= @bets.toRemind.remindable.size%></i> <b class="caret"></b></a>
                    <ul class="dropdown-menu alert-dropdown">
                    <% @bets.toRemind.remindable.each do |bet|%>

                        <li><a href="#"><%=bet.match%> </a>
                        <div style="float: left; width: auto; margin-left: 10px;">
                        <%= button_to "Won", setWon_bet_path(bet),:class => "btn btn-xs btn-primary", method: :put %> </div> 
                        <div style="float: left; width: auto; margin-left: 3px;">
                        <%= button_to "Lost", setLost_bet_path(bet),:class => "btn btn-xs btn-primary", method: :put %></div>
                        <div style="float: left; width: auto; margin-left: 3px;">
                        <span class="label label-default">    
                        <%=bet.reminder.hour%>:<%=bet.reminder.min%>  
                        <%=bet.reminder.day%>.<%=bet.reminder.month%>.<%=bet.reminder.year.to_s.slice(2,3)%>
                        </span></div>
                        </li>
                        <br></br>
                        <% unless bet == @bets.toRemind.remindable.last%><li class="divider"></li><%end%>
                    <%end%>
                    </ul>
                </li>
                <li class="dropdown">
                <% if user_signed_in? %>
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <%=current_user.email%> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                  
                            <a href="/users/sign_out" data-method="delete"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                    <%end%>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="bets"><i></i> Home</a>
                    </li>
                    <li>
                        <a href="/list"><i class="fa fa-fw fa-desktop"></i> Bets</a>    
                    </li>
                    <li class="active">
                        <a href="#"><i class="fa fa-fw fa-bar-chart-o"></i> Stats</a>
                    </li>
                    <li>
                        <a href="/settings"><i class="fa fa-fw fa-wrench"></i> Settings</a>
                    </li>
                    <li>
                        <a href="/about"><i></i> About</a>
                    </li>
                    <li>
                    </li>
                    <li>
                    </li>
                    <li>
                    </li>
                    <li>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Bets <small>statistics</small>
                        </h1>
                       
                    </div>
                </div>
                <!-- /.row -->

                
                <!-- /.row -->

  
                <!-- /.row -->

             
                <!-- /.row -->

                <div class="row">
                    <div class="col-xl-2">

                       <%= line_chart @bets.group_by_day(:created_at).sum(:gain) %>
                      
                      </div>
</div>
   <div class="row">
                    <div class="col-md-4">
<h3>Won/Lost all the time</h3>
   <%= pie_chart [["Won", @bets.where(:result => "1").count], ["Lost", @bets.where(:result => "0").count]] %>
                      </div>
                       <div class="col-md-4">
<h3>Won/Lost last 30 days</h3>
   <%= pie_chart [["Won", @bets.where(:result => "1").last30.count], ["Lost", @bets.where(:result => "0").count]] %>
                      </div>
                      <div class="col-md-4">
<h3>Won/Lost last 7 days</h3>
   <%= pie_chart [["Won", @bets.where(:result => "0").last7.count], ["Lost", @bets.where(:result => "0").count]] %>
                      </div>
</div>
                  
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Morris Charts JavaScript -->
    <script src="js/plugins/morris/raphael.min.js"></script>
    <script src="js/plugins/morris/morris.min.js"></script>
    <script src="js/plugins/morris/morris-data.js"></script>

</body>

</html>
